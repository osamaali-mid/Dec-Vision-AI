{
    "i18n": true,
    "type": "tabs",
    "items": {
        "_options": {
            "type": "panel",
            "label": "Camera",
            "items": {
                "Hostname": {
                    "type": "text",
                    "label": "IP / Hostname der Kamera",
                    "newLine": true
                },
                "Username": {
                    "type": "text",
                    "label": "Username",
                    "newLine": true
                },
                "Password": {
                    "type": "password",
                    "label": "Password",
                    "newLine": true,
                    "visible": false
                }
            }
        },
        "_SensorDetection": {
            "type": "panel",
            "label": "Sensor Detection",
            "items": {
                "PollMD": {
                    "type": "checkbox",
                    "label": "Use Motion Detection",
                    "newLine": true
                },
                "PollAI": {
                    "type": "checkbox",
                    "label": "Use AI Detection",
                    "newLine": true
                },
                "apiRefreshInterval": {
                    "type": "number",
                    "min": 250,
                    "max": 1200000,
                    "label": "Poll Interval for Sensor  Detection",
                    "help": "[Milliseconds]",
                    "default": 1000,
                    "newLine": true,
                    "sm": 6,
                    "md": 6,
                    "lg": 6
                },
                "apiSleepAfterError": {
                    "type": "number",
                    "min": 2,
                    "max": 1800,
                    "label": "If webcam is offline, sleep x seconds and try again",
                    "help": "[Seconds]",
                    "default": 10,
                    "newLine": true,
                    "sm": 6,
                    "md": 6,
                    "lg": 6
                }
            }
        }
    }
}