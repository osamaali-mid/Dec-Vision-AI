// Specialized tsconfig to only compile .ts-files in the src dir
{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"allowJs": false,
		"checkJs": false,
		"noEmit": false,
		"declaration": false,
		"noEmitOnError": false
	},
	"include": [
        "**/*.js",
		"src/**/*.ts"
	],
	"exclude": [
		"src/**/*.test.ts"
	]
}
